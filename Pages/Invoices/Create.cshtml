@page
@model IdentityApp.Pages.Invoices.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2 class="mt-5">Create
    <small class="text-muted">new bill</small>
</h2>

<hr class="mb-5"/>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Invoice.InvoiceAmount" class="control-label"></label>
                <input asp-for="Invoice.InvoiceAmount" class="form-control" />
                <span asp-validation-for="Invoice.InvoiceAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Invoice.InvoiceMonth" class="control-label"></label>
                <input asp-for="Invoice.InvoiceMonth" class="form-control" />
                <span asp-validation-for="Invoice.InvoiceMonth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Invoice.InvoiceOwner" class="control-label"></label>
                <input asp-for="Invoice.InvoiceOwner" class="form-control" />
                <span asp-validation-for="Invoice.InvoiceOwner" class="text-danger"></span>
            </div>
            <div class="form-group mt-5">
                <input type="submit" value="Create" class="btn btn-primary" style="background-color: rgb(27, 91, 56)" />
                <a asp-page="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>

    .form-group {
        margin-bottom: 20px;
    }

    h1 {
        margin-bottom: 20px;
    }
</style>